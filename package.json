{
  "name": "users-mangment",
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate && npm run db:seed",
    "db:seed": "node prisma/seed.js",
    "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dev": "npm run electron:build && concurrently \"npm run dev\" \"npm run electron:start\"",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:start": "wait-on http://localhost:3000 && electron .",
    "electron:watch": "tsc -p electron/tsconfig.json --watch",
    "electron-pack": "npm run build && npm run electron:build && electron-builder",
    "preelectron-pack": "npm run build && npm run electron:build",
    "dist": "npm run build && npm run electron:build && electron-builder --publish=never"
  },
  "build": {
    "appId": "com.yourcompany.employees-manager",
    "productName": "Employees Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "db.sqlite",
        "to": "db.sqlite"
      },
      {
        "from": "public/images",
        "to": "images"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.15.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@uploadthing/react": "^7.3.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-is-dev": "^3.0.1",
    "lucide-react": "^0.533.0",
    "next": "15.4.4",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.61.1",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "uploadthing": "^7.7.3",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/electron": "^1.4.38",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "prisma": "^6.15.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  }
}
